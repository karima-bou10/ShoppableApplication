{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport Header from \"../components/Header.vue\";\nimport Sidebar from \"../components/Sidebar.vue\";\nimport LogoutModal from \"@/components/LogoutModal.vue\";\nimport AuthService from \"@/services/auth.service\";\nimport { useRouter } from \"vue-router\";\nimport { ref, computed } from \"vue\";\nexport default {\n  name: \"app\",\n  components: {\n    Header,\n    Sidebar,\n    LogoutModal\n  },\n  setup() {\n    const is_expanded = ref(localStorage.getItem(\"is_expanded\") === \"true\");\n\n    // Calculate dynamic marginLeft value based on is_expanded\n    const mainContentMargin = computed(() => {\n      return is_expanded.value ? `calc(var(--sidebar-width))` : \"4rem\";\n    });\n    const isLogoutModalVisible = ref(false);\n    const router = useRouter();\n    const handleLogout = () => {\n      AuthService.logout();\n      router.push(\"/\"); // Redirect user to login page\n      hideLogoutModal();\n    };\n    const showLogoutModal = () => {\n      isLogoutModalVisible.value = true;\n    };\n    const hideLogoutModal = () => {\n      isLogoutModalVisible.value = false;\n    };\n    return {\n      is_expanded,\n      mainContentMargin,\n      isLogoutModalVisible,\n      handleLogout,\n      showLogoutModal,\n      hideLogoutModal\n    };\n  }\n};","map":{"version":3,"names":["Header","Sidebar","LogoutModal","AuthService","useRouter","ref","computed","name","components","setup","is_expanded","localStorage","getItem","mainContentMargin","value","isLogoutModalVisible","router","handleLogout","logout","push","hideLogoutModal","showLogoutModal"],"sources":["C:\\Users\\Utente\\Desktop\\ShoppableApplication\\admin\\src\\views\\Home.vue"],"sourcesContent":["<template>\r\n  <div id=\"Home-page\">\r\n    <Sidebar @show-logout-modal=\"showLogoutModal\" />\r\n    <div class=\"main-content\" :style=\"{ marginLeft: mainContentMargin }\">\r\n      <Header />\r\n      <div class=\"router-view\">\r\n        <