{"ast":null,"code":"import \"core-js/modules/web.url-search-params.delete.js\";\nimport \"core-js/modules/web.url-search-params.has.js\";\nimport \"core-js/modules/web.url-search-params.size.js\";\nimport ProductService from \"../../services/product.service.js\";\nexport default {\n  name: \"EditProdModal\",\n  props: {\n    showEditModal: Boolean,\n    // Prop to control modal visibility\n    selectedProduct: Object,\n    // Prop to pass selected product data\n    categories: Array // Prop to pass categories data\n  },\n  data() {\n    return {\n      uploadedImage: this.selectedProduct ? this.selectedProduct.image : \"\",\n      // Add a data property to store the uploaded image\n      invalidPrice: false,\n      invalidQte: false,\n      editedProduct: {\n        name: \"\",\n        category: {},\n        quantity: 0,\n        description: \"\",\n        price: 0\n      }\n    };\n  },\n  mounted() {\n    // Initialize editedProduct after component is mounted\n    if (this.selectedProduct) {\n      this.editedProduct = {\n        ...this.selectedProduct\n      }; // Copy selected product data for editing\n    }\n  },\n  methods: {\n    closeModal() {\n      this.$emit(\"close\"); // Émet un événement pour fermer le modal\n    },\n    selectImage() {\n      this.$refs.fileInput.click();\n    },\n    handleImageUpload(event) {\n      const file = event.target.files[0];\n      this.uploadedImage = URL.createObjectURL(file);\n      this.editedProduct.image = this.uploadedImage;\n    },\n    async saveChanges() {\n      // Convert the price to a number\n      const price = parseFloat(this.editedProduct.price);\n\n      // Check if the price is a valid number\n      if (isNaN(price) || price <= 0) {\n        // Notify the user that the price is invalid\n        this.invalidPrice = true;\n        this.invalidQte = false;\n        return;\n      }\n      this.invalidPrice = false;\n      if (this.editedProduct.quantity <= 0) {\n        // Notify the user that the quantity is invalid\n        this.invalidQte = true;\n        return;\n      }\n\n      // Emit event to save changes and pass edited product data to parent component\n      this.$emit(\"save\", this.editedProduct);\n      this.closeModal(); // Close modal after saving changes\n    }\n  }\n};","map":{"version":3,"names":["ProductService","name","props","showEditModal","Boolean","selectedProduct","Object","categories","Array","data","uploadedImage","image","invalidPrice","invalidQte","editedProduct","category","quantity","description","price","mounted","methods","closeModal","$emit","selectImage","$refs","fileInput","click","handleImageUpload","event","file","target","files","URL","createObjectURL","saveChanges","parseFloat","isNaN"],"sources":["C:\\Users\\hp\\ShoppableApplication\\admin\\src\\components\\Product\\EditProdModal.vue"],"sourcesContent":["<template>\r\n  <!-- Main modal -->\r\n  <Transition name=\"modal\">\r\n    <div\r\n      tabindex=\"-1\"\r\n      class=\"modal-mask hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center md:inset-0 h-[calc(100%-1rem)] max-h-full\"\r\n    >\r\n      <div class=\"relative p-4 w-full max-w-3xl max-h-full\">\r\n        <!-- Modal content -->\r\n        <div class=\"relative bg-white rounded-lg shadow\">\r\n          <!-- Modal header -->\r\n          <div\r\n            class=\"flex items-center justify-between p-4 md:p-5 border-b rounded-t\"\r\n          >\r\n            <h3 class=\"text-lg font-semibold text-gray-900\">Edit Product</h3>\r\n            <button\r\n              type=\"button\"\r\n              class=\"text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center\"\r\n              @click=\"closeModal\"\r\n            >\r\n              <svg\r\n                class=\"w-3 h-3\"\r\n                xmlns=\"http://www.w3.org/2000/svg\"\r\n                fill=\"none\"\r\n                viewBox=\"0 0 14 14\"\r\n              >\r\n                <path\r\n                  stroke=\"currentColor\"\r\n                  stroke-linecap=\"round\"\r\n                  stroke-linejoin=\"round\"\r\n                  stroke-width=\"2\"\r\n                  d=\"m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6\"\r\n                />\r\n              </svg>\r\n              <span class=\"sr-only\">Close modal</span>\r\n            </button>\r\n          </div>\r\n          <!-- Modal body -->\r\n          <form class=\"p-4 md:p-5\" @submit.prevent=\"saveChanges\">\r\n            <div class=\"grid gap-4 mb-4 grid-cols-3 grid-cols-custom\">\r\n              <div class=\"col-span-2\">\r\n                <label\r\n                  for=\"name\"\r\n                  class=\"block mb-2 text-sm font-medium text-left text-gray-900\"\r\n                  >Name</label\r\n                >\r\n                <input\r\n                  v-model=\"editedProduct.name\"\r\n                  type=\"text\"\r\n                  name=\"name\"\r\n                  id=\"name\"\r\n                  class=\"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5\"\r\n                  required\r\n                />\r\n              </div>\r\n\r\n              <div class=\"col-span-1 row-span-4\">\r\n                <label\r\n                  for=\"product-image\"\r\n                  class=\"block mb-2 text-sm font-medium text-left text-gray-900\"\r\n                  >Product Image</label\r\n                >\r\n                <div\r\n                  class=\"rounded-lg border border-dashed border-gray-900/25 px-4 py-4\"\r\n                >\r\n                  <div\r\n                    class=\"block flex justify-center mb-2 text-sm text-center leading-6 text-gray-600\"\r\n                  >\r\n                    <label\r\n                      for=\"file-upload\"\r\n                      class=\"relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 hover:text-indigo-500\"\r\n                    >\r\n                      <button type=\"button\" @click=\"selectImage\">\r\n                        Change Image\r\n                      </button>\r\n                      <input\r\n                        id=\"file-upload\"\r\n                        name=\"file-upload\"\r\n                        type=\"file\"\r\n                        accept=\"image/png, image/jpeg\"\r\n                        ref=\"fileInput\"\r\n                        class=\"sr-only\"\r\n                        @change=\"handleImageUpload\"\r\n                      />\r\n                    </label>\r\n                    <p class=\"pl-1\">or drag and drop</p>\r\n                  </div>\r\n                  <div>\r\n                    <img\r\n                      :src=\"uploadedImage\"\r\n                      alt=\"Uploaded Image\"\r\n                      width=\"230\"\r\n                      height=\"300\"\r\n                      class=\"max-w-full max-h-full rounded-md m-auto\"\r\n                    />\r\n                  </div>\r\n                </div>\r\n              </div>\r\n\r\n              <div class=\"col-span-2\">\r\n                <label\r\n                  for=\"category\"\r\n                  class=\"block mb-2 text-sm font-medium text-left text-gray-900\"\r\n                  >Category</label\r\n                >\r\n                <select\r\n                  v-model=\"editedProduct.category\"\r\n                  id=\"category\"\r\n                  class=\"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5\"\r\n                  required\r\n                >\r\n                  <option\r\n                    v-for=\"category in categories\"\r\n                    :key=\"category.id\"\r\n                    :value=\"category.id\"\r\n                  >\r\n                    {{ category.name }}\r\n                  </option>\r\n                </select>\r\n              </div>\r\n\r\n              <div class=\"col-span-1\">\r\n                <label\r\n                  for=\"price\"\r\n                  class=\"block mb-2 text-sm font-medium text-left text-gray-900\"\r\n                  >Price</label\r\n                >\r\n                <input\r\n                  v-model=\"editedProduct.price\"\r\n                  type=\"text\"\r\n                  name=\"price\"\r\n                  id=\"price\"\r\n                  class=\"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5\"\r\n                  required\r\n                />\r\n                <div v-if=\"invalidPrice\" class=\"text-xs pt-2 text-red-600\">\r\n                  Please enter a valid number\r\n                </div>\r\n              </div>\r\n\r\n              <div class=\"col-span-1\">\r\n                <label\r\n                  for=\"quantity\"\r\n                  class=\"block mb-2 text-sm font-medium text-left text-gray-900\"\r\n                  >Quantity</label\r\n                >\r\n                <input\r\n                  v-model=\"editedProduct.quantity\"\r\n                  type=\"number\"\r\n                  name=\"quantity\"\r\n                  id=\"quantity\"\r\n                  class=\"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5\"\r\n                  required\r\n                />\r\n                <div v-if=\"invalidQte\" class=\"text-xs pt-2 text-red-600\">\r\n                  Please enter a valid number\r\n                </div>\r\n              </div>\r\n\r\n              <div class=\"col-span-2\">\r\n                <label\r\n                  for=\"description\"\r\n                  class=\"block mb-2 text-sm font-medium text-left text-gray-900\"\r\n                  >Product Description</label\r\n                >\r\n                <textarea\r\n                  v-model=\"editedProduct.description\"\r\n                  id=\"description\"\r\n                  rows=\"4\"\r\n                  class=\"block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500\"\r\n                  placeholder=\"Write product description here\"\r\n                ></textarea>\r\n              </div>\r\n            </div>\r\n            <button\r\n              type=\"submit\"\r\n              class=\"text-white mt-4 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2 text-center\"\r\n            >\r\n              Save Changes\r\n            </button>\r\n          </form>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </Transition>\r\n</template>\r\n\r\n<script>\r\nimport ProductService from \"../../services/product.service.js\";\r\n\r\nexport default {\r\n  name: \"EditProdModal\",\r\n  props: {\r\n    showEditModal: Boolean, // Prop to control modal visibility\r\n    selectedProduct: Object, // Prop to pass selected product data\r\n    categories: Array, // Prop to pass categories data\r\n  },\r\n  data() {\r\n    return {\r\n      uploadedImage: this.selectedProduct ? this.selectedProduct.image : \"\", // Add a data property to store the uploaded image\r\n      invalidPrice: false,\r\n      invalidQte: false,\r\n      editedProduct: {\r\n        name: \"\",\r\n        category: {},\r\n        quantity: 0,\r\n        description: \"\",\r\n        price: 0,\r\n      },\r\n    };\r\n  },\r\n  mounted() {\r\n    // Initialize editedProduct after component is mounted\r\n    if (this.selectedProduct) {\r\n      this.editedProduct = { ...this.selectedProduct }; // Copy selected product data for editing\r\n    }\r\n  },\r\n  methods: {\r\n    closeModal() {\r\n      this.$emit(\"close\"); // Émet un événement pour fermer le modal\r\n    },\r\n    selectImage() {\r\n      this.$refs.fileInput.click();\r\n    },\r\n    handleImageUpload(event) {\r\n      const file = event.target.files[0];\r\n      this.uploadedImage = URL.createObjectURL(file);\r\n      this.editedProduct.image = this.uploadedImage;\r\n    },\r\n\r\n    async saveChanges() {\r\n      // Convert the price to a number\r\n      const price = parseFloat(this.editedProduct.price);\r\n\r\n      // Check if the price is a valid number\r\n      if (isNaN(price) || price <= 0) {\r\n        // Notify the user that the price is invalid\r\n        this.invalidPrice = true;\r\n        this.invalidQte = false;\r\n        return;\r\n      }\r\n      this.invalidPrice = false;\r\n\r\n      if (this.editedProduct.quantity <= 0) {\r\n        // Notify the user that the quantity is invalid\r\n        this.invalidQte = true;\r\n        return;\r\n      }\r\n\r\n      // Emit event to save changes and pass edited product data to parent component\r\n      this.$emit(\"save\", this.editedProduct);\r\n      this.closeModal(); // Close modal after saving changes\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n@import \"./styleModal.css\";\r\n\r\n.modal-mask {\r\n  background-color: rgb(0, 0, 0, 0.06);\r\n}\r\n.grid-cols-custom {\r\n  grid-template-columns: 1fr 1fr 2fr; /* 3ème colonne prend 2 fois la taille de la 2ème */\r\n}\r\n</style>\r\n"],"mappings":";;;AA4LA,OAAOA,cAAa,MAAO,mCAAmC;AAE9D,eAAe;EACbC,IAAI,EAAE,eAAe;EACrBC,KAAK,EAAE;IACLC,aAAa,EAAEC,OAAO;IAAE;IACxBC,eAAe,EAAEC,MAAM;IAAE;IACzBC,UAAU,EAAEC,KAAK,CAAE;EACrB,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,aAAa,EAAE,IAAI,CAACL,eAAc,GAAI,IAAI,CAACA,eAAe,CAACM,KAAI,GAAI,EAAE;MAAE;MACvEC,YAAY,EAAE,KAAK;MACnBC,UAAU,EAAE,KAAK;MACjBC,aAAa,EAAE;QACbb,IAAI,EAAE,EAAE;QACRc,QAAQ,EAAE,CAAC,CAAC;QACZC,QAAQ,EAAE,CAAC;QACXC,WAAW,EAAE,EAAE;QACfC,KAAK,EAAE;MACT;I